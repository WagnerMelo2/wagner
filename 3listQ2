#include <stdio.h>

int main(){
	char x[20];
	int a=0, c=0;
	
	printf("Digite um texto para saber a quantidade de vogais: ");
	scanf("%[^\n]s", x);

	for(;x[a] != '\0';a++){
		if(x[a] == 'a' || x[a] == 'e' || x[a] == 'i' || x[a] == 'o' || x[a] == 'u'){
		c++;
		}
	}
	
	
	printf("%d", c);
	
	return 0;
}
