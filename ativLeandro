#include <stdio.h>
#include <stdlib.h>
#include <conio.h>
#include <math.h>

int A;	// variavel global , usada nas funções abaixo.

void raiz(){	//Questão 4
	float a, x;
	int b;
	
	printf("Digite um numero:");
	scanf("%f", &a);
	printf("Digite um numero inteiro:");
	scanf("%d", &b);
	
	x = pow(a,1.0/b);
	printf("O resultado e: %e\n", x);
}


void potencia(){ //Questão 3 , função para calculo de potencia.
	float a, x;
	int b;
	
	printf("Digite um numero base para calcular sua potencia:");
	scanf("%f", &a);
	printf("Digite um numero inteiro para ser o expoente:");
	scanf("%d", &b);
	
	x = pow(a,b);
	printf("O resultado e: %e\n", x);
}

void media_p(){	//Questão 6. media de 3 provas/peso
	float num1, num2, num3, media, peso = 4;
	printf("Digite a primeira nota:");
	scanf("%f", &num1);
	printf("Digite a segunda nota:");
	scanf("%f", &num1);
	printf("Digite a terceira nota:");
	scanf("%f", &num3);
	
	media = (num3 * 2) + num2 + num1;
	media = media / peso; 
	
	if ( media >= 60 ){
		printf("Sua media e: %f\n", media);
		printf("Aprovado\n");	
	}
	else 
		printf("Sua media e: %f\n", media);
		printf("Reprovado!\n");	
		
}


void matricula(){	//Questão 8, função que imprime minha matricula e meu nome!

	printf("nome: José Wagner Correia de Melo.\n");
	
	A = 1910024355;
	
	printf("Minha matricula: %x\n", A);

}


void media(){	//Questão 7, função para verificar notas.
	float num1, num2, media;
	
	printf("Informe a primeira nota:");
	scanf("%f", &num1);
	printf("informe a segunda nota:");
	scanf("%f", &num2);
	
	if((num1 >= 0.0 && num1 <= 10.0) && (num2 >= 0.0 && num2 <= 10.0)){
		printf("Numero valido!\n");
		media = (num1 + num2) /2;
		printf("A media entre as duas notas e: %f\n", media);
	}
	else{
		printf("Numero invalido!\n");
 	}
}

void par_inpar(){	//Questão 2, função de número par ou impar.
	printf("Digite um numero para saber se ele e par ou impar:");
	scanf("%d", &A);
	
	if (A % 2 == 0)
		printf("numero par!");
	else 
		printf("numero inpar!");
}

void bissexto(){	//Questão 4, função de indentificação de ano bissexto.
	printf("Informe o ano para saber se ele e bissexto:");
	scanf("%d", &A);
	
	if(A % 4 == 0)
		printf("Ano bissexto!\n");
	else
		printf("Nao e bissexto!\n");
}



int main(){//	Questão 1
	
	int x = 1, y;
	while(x != 0){
		printf("Digite um numero de 0 a 10:\n");
		scanf("%d", &y);
		
		switch(y){
			case 0:
				x = 0;
				printf("By, By!");
			break;
			
			case 1:
				par_inpar();
			break;
			
			case 2:
				potencia();
			break;
			
			case 3:
				raiz();	
			break;
			
			case 4:
				bissexto();
			break;
			
			case 5:
				media_p();
			break;
			
			case 6:
				media();
			break;
			
			case 7:
				
			break;
			
			case 8:
			
			break;
			
			case 9:
				
			break;
			
			case 10:
				matricula();
			break;
			
				
		}
	}
	return 0;
}			
